AnchorLayout:
    BoxLayout:
        orientation: "horizontal"
        spacing: 10
        size_hint: 0.65, 0.85
        size_hint_max: 1920, 1080   # use ifs instead of this in the end
        size_hint_min: 10, 10       #
        BoxLayout:                                                  # left side
            size_hint: 0.44, 1
            orientation: "vertical"
            Image:                                            # grayscale image - can't anchor on bottom for some reason
                id: grayscale_img
                size_hint: 1, 0.85
                source: "assets/b.jpg"
            AnchorLayout:                                                  # left & right gallery buttons
                size_hint: 1, 0.05
                BoxLayout:
                    size_hint: 0.4, 1
                    Button:
                        size_hint: 0.5, 1
                        text: "<"
                        id: previous_grayscale
                    Button:
                        size_hint: 0.5, 1
                        text: ">"
                        id: next_grayscale
            BoxLayout:                                                  # start & upload buttons
                size_hint: 1, 0.1
                Button:
                    size_hint: 0.5, 1
                    id: load
                    text: "load"
                    on_release: app.show_load()
                Button:
                    id: start
                    size_hint: 0.5, 1
                    text: "start"
        ProgressBar:                                                     # middle arrow
            size_hint: 0.12, 1
            id: pb
            max: 1000
            value: 300
            canvas:
                BorderImage:
                    border: [int(min(self.width * (self.value / float(self.max)) if self.max else 0, 12))] * 4
                    pos: self.x, self.center_y - 12
                    size: self.width * (self.value / float(self.max)) if self.max else 0, self.width * 473/512
                    source: 'assets/green.png'
                BorderImage:
                    border: (0, 0, 0, 0)
                    pos: self.x, self.center_y - 12
                    size: self.width, self.width * 473/512
                    source: 'assets/tr.png'
        BoxLayout:                                                  # right side
            size_hint: 0.44, 1
            orientation: "vertical"
            Image:                                             # colored image - can't anchor on bottom for some reason
                id: colorized_img
                size_hint: 1, 0.85
                source: "assets/d.jpg"
            AnchorLayout:                                                  # left & right gallery buttons
                size_hint: 1, 0.05
                BoxLayout:
                    size_hint: 0.4, 1
                    Button:
                        size_hint: 0.5, 1
                        text: "<"
                        id: previous_colorized
                    Button:
                        size_hint: 0.5, 1
                        text: ">"
                        id: next_colorized
            BoxLayout:                                                  # stop & save buttons
                size_hint: 1, 0.1
                Button:
                    id: save
                    size_hint: 0.5, 1
                    text: "save"
                Button:
                    id: save_all
                    size_hint: 0.5, 1
                    text: "save all"

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            dirselect: True

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
