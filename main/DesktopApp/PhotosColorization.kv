AnchorLayout:
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        size_hint: 0.65, 0.85
        size_hint_max: 1920, 1080   # use ifs instead of this in the end
        size_hint_min: 10, 10       #
        BoxLayout:
            size_hint: 1, 0.6
            BoxLayout:
                size_hint: 0.4, 1
                orientation: "vertical"
                Image:
                    size_hint: 1, 0.8
                    canvas.before:
                        Color:
                            rgb: 1, 0, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    source: "a.jpg"
                BoxLayout:
                    canvas.before:
                        Color:
                            rgb: 0, 1, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    size_hint: 1, 0.2
                    Button:
                        size_hint: 0.5, 0.8
                        text: "upload"
                    Button:
                        size_hint: 0.5, 0.8
                        text: "start"
            ProgressBar:
                size_hint: 0.2, 1
            BoxLayout:
                size_hint: 0.4, 1
                orientation: "vertical"
                RelativeLayout:
                    size_hint: 1, 0.6
                    Image:
                        source: "a.jpg"
        BoxLayout:
            size_hint: 1, 0.4
            Button
                text: "bottom"
